<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/size50dp"
        android:layout_height="@dimen/size50dp"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names" />

    <ImageView
        android:id="@+id/ivCode"
        android:layout_width="@dimen/size24dp"
        android:layout_height="@dimen/size24dp"
        android:layout_marginStart="@dimen/size10dp"
        android:layout_marginTop="@dimen/size5dp"
        android:contentDescription="@string/image"
        android:src="@drawable/folder"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/tvRepositori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size5dp"
        tools:text="@tools:sample/lorem"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:layout_constraintBottom_toBottomOf="@id/ivCode"
        app:layout_constraintStart_toEndOf="@id/ivCode"
        app:layout_constraintTop_toTopOf="@id/ivCode" />

    <ImageView
        android:id="@+id/ivCorporate"
        android:layout_width="@dimen/size24dp"
        android:layout_height="@dimen/size24dp"
        android:layout_marginStart="@dimen/size10dp"
        android:layout_marginTop="@dimen/size5dp"
        android:contentDescription="@string/image"
        android:src="@drawable/ic_corporate"
        app:layout_constraintStart_toEndOf="@id/tvRepositori"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/tvCorporate"
        android:layout_width="@dimen/size200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        app:layout_constraintBottom_toBottomOf="@id/ivCorporate"
        app:layout_constraintStart_toEndOf="@id/ivCorporate"
        app:layout_constraintTop_toTopOf="@id/ivCorporate"
        tools:text="@tools:sample/lorem" />


</androidx.constraintlayout.widget.ConstraintLayout>